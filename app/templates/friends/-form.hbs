<div>
  <h2>Friend details</h2>
  <p>{{model.first_name}}</p>
  <p>{{model.last_name}}</p>
</div>

<form {{action "save" on "submit"}}>
  <p>
    <label>
      First name
      {{input value="model.first_name"}}
    </label>
  </p>
  <p>
    <label>
      Last name
      {{input value="model.last_name"}}
    </label>
  </p>
  <p>
    <label>
      Email
      {{input type='email' value="model.email"}}
    </label>
  </p>
  <p>
    <label>
      Twitter
      {{input type='text' value="model.twitter"}}
    </label>
  </p>
  <input type="submit" value="Submit">
  <button {{action "cancel"}}>Cancel</button>
</form>
